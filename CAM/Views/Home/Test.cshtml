@model List<string>

@{
    ViewBag.Title = "Test";
}


@if(Model == null)
{
    using(Html.BeginForm("Test", "Home", FormMethod.Post, new {@class="well form-inline"}))
    {
        @Html.AntiForgeryToken()
        <span class="help-block">Login credentials for your AD.</span>
        <input type="text" name="userName" placeholder="User Name"/>
        <input type="password" name="password" placeholder="Password"/>
        <input type="submit" value="Authenticate" class="btn btn-primary"/>
    }
}
else
{
    <h2>@Model.Count Results</h2>

    <ul>
        @foreach (var r in Model)
        {
            <li>@r</li>
        }
    </ul>
}