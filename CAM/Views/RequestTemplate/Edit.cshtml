@model RequestTemplateViewModel

@{
    ViewBag.Title = "Edit Template";
}

<h2>Edit Request Template</h2>

@using (Html.BeginForm("Edit", "RequestTemplate", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true);
    @Html.Hidden("RequestTemplate.Site", Model.RequestTemplate.Site.Id)
    @Html.Hidden("Id", Model.RequestTemplate.Id)
                
    <legend>Template Details</legend>
    
    <div class="control-group">
        <fieldset>
            <div class="control-group">
                @Html.LabelFor(model => model.RequestTemplate.Name, new {@class="control-label"})
                <div class="controls">
                    @Html.TextBoxFor(model => model.RequestTemplate.Name, new {@class="span3"})
                    @Html.ValidationMessageFor(model => model.RequestTemplate.Name)
                </div>
            </div>
            <div class="control-group">
                @Html.LabelFor(model => model.RequestTemplate.Description, new {@class="control-label"})
                <div class="controls">
                    @Html.TextAreaFor(model => model.RequestTemplate.Description, new {@class="span3"})
                    @Html.ValidationMessageFor(model => model.RequestTemplate.Description)
                </div>
            </div>
        </fieldset>
    </div>
    
    @Html.Partial("_RequestTemplateUnit")
    
    @Html.Partial("_RequestTemplateSecurityGroups")
    
    @Html.Partial("_RequestTemplateEmail")
    
    @Html.Partial("_RequestTemplateSoftware")

    <div class="form-actions">
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", new {}, new {@class="btn"})
    </div>
}

@section AdditionalScripts
{
    <script type="text/javascript" src="@Url.Content("~/Script/RequestTemplate.js")"></script>
}