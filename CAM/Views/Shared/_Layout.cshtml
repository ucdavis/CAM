<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>CA&ES Computing Access</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    
    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
    </style>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" >
    <link href="@Url.Content("~/Content/font-awesome.css")" rel="stylesheet" >
      <link href="@Url.Content("~/Content/bootstrap-custom.css")" rel="stylesheet" >
    <link href="@Url.Content("~/Content/bootstrap-responsive.css")" rel="stylesheet" >
    <link href="@Url.Content("~/Content/custom.css")" rel="stylesheet"/>  

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
      
    @RenderSection("styles", required:false)

  </head>

  <body>

    @Html.Partial("_navigation")
      
      <div class="jumbotron">
          <div class="container">
              @RenderSection("subhead", required: false)              
              <ul class="nav nav-pills pull-right">
                  @RenderSection("subnav", required: false)
              </ul>
          </div>
      </div>
      

    <div class="container">
        
        @if(!string.IsNullOrEmpty(TempData["Message"] as string))
        {
            <div class="alert">
                <button class="close" data-dismiss="alert">×</button>
                @TempData["Message"]
            </div>
        }

        @RenderBody()

        <hr>
        <footer><p>&copy; The Regents of the University of California, Davis campus</p></footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>

    <script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker();
        $(".hastip").tooltip();
    });
    </script>

    @RenderSection("scripts", required: false)

  </body>
</html>

