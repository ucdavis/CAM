<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>CA&ES Computing Access</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    <link href="@Url.Content("~/Assets/css/bootstrap.css")" rel="stylesheet" >
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
    <link href="@Url.Content("~/Assets/css/bootstrap-responsive.css")" rel="stylesheet" >
    <link href="@Url.Content("~/Content/themes/uibootstrap/jquery-ui-1.8.16.custom.css")" rel="stylesheet"/>

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

  </head>

  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">CA&ES Computing Access Request</a>
          
           @Html.Partial("_LoginPartial")

        <div class="nav-collapse">
            <ul class="nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                
                @if (ViewContext.RequestContext.RouteData.Values["site"] != "none")
                {
                    @*<li class="">@Html.ActionLink("Request Access", "Index", "Request")</li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Administration
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Review Requests", "Index", "Request")</li>
                            <li>@Html.ActionLink("Request Templates", "Index", "RequestTemplate")</li>
                            <li class="divider"></li>
                            <li class="nav-header">Active Directory</li>
                            <li>@Html.ActionLink("Security Groups", "SecurityGroups", "ActiveDirectory")</li>
                            <li>@Html.ActionLink("Organizational Units", "OrganizationalUnits", "ActiveDirectory")</li>
                        </ul>
                    </li>
                }
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    @RenderSection("featured", required: false)

    <div class="container-fluid">
        
        @if(!string.IsNullOrEmpty(TempData["Message"] as string))
        {
            <div class="alert">
                <button class="close" data-dismiss="alert">×</button>
                @TempData["Message"]
            </div>
        }

        @RenderBody()

        <hr>
        <footer><p>&copy; The Regents of the University of California, Davis campus</p></footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="@Url.Content("~/Scripts/jquery-1.7.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")"></script>
    <script src="@Url.Content("~/Assets/js/bootstrap.js")"></script>

    <script type="text/javascript">
    $(function () {
        $(".datepicker").datepicker();
        $(".hastip").tooltip();
    });
    </script>

    @RenderSection("AdditionalScripts", required: false)

  </body>
</html>

